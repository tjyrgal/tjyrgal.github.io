display-flex()
  display flex
  display -webkit-flex

* 
  box-sizing border-box
  
body
  margin 0
  font-family: 'Montserrat', sans-serif;
  color: #37373F;
  font-size: 16px;
  
a 
  text-decoration none

.wrapper
  width 100%
  max-width 1132px
  margin 0 auto

.color-orange
  color #FC9B09

.header
  width 100%
  background #fff
  padding 38px 0

.header > .wrapper 
  display-flex()
  align-items center

.logo > img 
  width 128px
  height auto

.tel_header
  margin-left 36px

.tel
  color: #B3B3B3;
  font-size: 14px;

.tel__link
  color: #37373F;

.subheader
  background url(../image/helimain.png) center no-repeat;
  width 100%
  height: 840px;
  padding: 1px 0

.subheader .container
  width 100%
  max-width 887px
  margin-top 386px

.title
  font-weight: bold
  font-size: 40px
  color #fff

.price 
  width 100%;
  max-width 224px;
  background #fc9b09;
  box-shadow 0px 4px 4px rgba(0, 0, 0, 0.1);
  border-radius 5px;
  padding 11px 22px;
  color #fff;
  display-flex()
  align-items center;
  justify-content center;
  position relative;

  &:after 
    content '';
    position absolute;
    bottom -24px;
    right 53px;
    z-index 9999;
    border 12px solid transparent; /* Прозрачные границы */
    border-top 12px solid #fc9b09; /* Добавляем треугольник */

.price__text
  font-size 20px
  color #fff

.price__sum
  font-weight 800
  font-size 35px

.price__icon
  display block
  min-width 52px
  min-height 52px
  border 1px solid #ffffff
  border-radius 50%
  box-shadow 0px 4px 4px rgba(255, 255, 255, 0.25)
    0px 4px 15px rgba(255, 255, 255, 0.25)
  font-weight 800
  font-size 35px
  text-align center
  line-height 52px
  position relative

.btn {
  width 100%
  max-width 304px
  height 68px
  margin-top 20px
  border 3px solid #FFFFFF
  box-sizing border-box
  box-shadow 0px 4px 4px rgba(255, 255, 255, 0.25), 0px 4px 70px rgba(255, 255, 255, 0.7)
  border-radius 3px
  background none
  font-weight: 900
  font-size: 18px
  color #fff
  }



